<view class='container'>
<view class="login-from">  
  
    <!--公司名-->  
    <view class="inputView">  
      <label class="loginLab">公司名</label>  
      <input class="inputText" placeholder="请输入公司名" bindinput="nameInput" />  
    </view>  
    <view class="line"></view>  
  
    <!--职位-->  
    <view class="inputView">  
      
      <label class="loginLab">职位</label>  
      <input class="inputText" password="true" placeholder="请输入职位" bindinput="jobInput" />  
    </view>  
    <view class="line"></view>  
     <!--薪资-->  
    <view class="inputView">  
      <label class="loginLab">薪资</label>  
      <input class="inputText" placeholder="请输入薪资" bindinput="wagesInput" />  
    </view>  
    <view class="line"></view>  
    <!--工作经验-->  
    <view class="inputView">  
      <label class="loginLab">要求工作经验</label>  
      <input class="inputText" placeholder="请输入要求工作经验" bindinput="yearInput" />  
    </view>  
    <view class="line"></view>  
    <!--学历-->  
    <view class="inputView">  
      <label class="loginLab">要求学历</label>  
      <input class="inputText" placeholder="请输入学历" bindinput="educationInput" />  
    </view>  
    <view class="line"></view>  
    <!--工作性质-->  
    <view class="inputView">  
      <label class="loginLab">工作性质</label>  
      <input class="inputText" placeholder="请输入工作性质" bindinput="leixingInput" />  
    </view>  
    <view class="line"></view>  
   <!--公司描述-->  
    <view class="inputView">  
      <label class="loginLab">公司描述</label>  
      <input class="inputText" placeholder="请输入公司描述" bindinput="detailsInput" />  
    </view>  
    <view class="line"></view>  
    
  
    <!--按钮-->  
    <view class="loginBtnView">  
     <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="submit">提交</button>
    </view>  
  </view>  
</view>